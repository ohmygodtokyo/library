<div class="card-category">
  <%= link_to collection_path(@collection) do %>
    <%= image_tag @collection.image, class: "img-fluid card-image", alt: @collection.name %>
    <span class="text-overlay"><%= @collection.name %></span>
  <% end %>
</div>

<div class="container">
  <%= render 'shared/book' %>
  <%= link_to "Add a new book", new_collection_book_path(@collection, @book), class: "orange-button" %>
<%= link_to "View Collections", collections_path, class: "trans-button"  %>
</div>
<style>

.orange-button {
  display: inline-block;
  padding: 10px 20px;
  background-color: orange;
  color: white;
  text-decoration: none;
  border-radius: 5px;
  font-family: 'Poppins';
  font-weight: bold;
  margin-top: 30px;
  border: none;

}

.orange-button:hover {
  background-color: darkorange;
}

.trans-button {
  display: inline-block;
  padding: 10px 20px;
  background-color: rgba(230, 230, 230, 0.1);
  color: white;
  text-decoration: none;
  border-radius: 5px;
  font-family: 'Poppins';
  font-weight: bold;
  margin-top: 30px;

}

.trans-button: hover {
  box-shadow: 0 0 15px rgba(246, 241, 241, 0.43);
  transition: background-color 0.3s ease, box-shadow 0.3s ease;

}

.card-category {
  position: relative;
  height: 300px;
  border-radius: 5px;
  overflow: hidden;
  box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
}

.card-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.text-overlay {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 50px;
  font-weight: bold;
  text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.2);
  font-family: 'Poppins';
}

</style>
