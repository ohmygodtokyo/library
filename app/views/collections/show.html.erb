<div class="card-category">
  <%= link_to collection_path(@collection) do %>
    <% if @collection.photo.attached? %>
      <%= cl_image_tag @collection.photo.key, class: "img-fluid card-image", alt: @collection.name %>
      <span class="text-overlay"><%= @collection.name %></span>
    <% else %>
      <%= image_tag('Literary-Fiction-Books-dark-min-1536x864.png', class: "img-fluid card-image", alt: @collection.name) %>
      <span class="text-overlay"><%= @collection.name %></span>
    <% end %>
  <% end %>
</div>
<div class="container">
  <%= render 'shared/book' %>
  <%= link_to "Add A Book", new_collection_book_path(@collection, @book), class: "orange-button" %>
<%= link_to "View Collections", collections_path, class: "trans-button"  %>
</div>

